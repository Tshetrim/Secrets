<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">The Public's Secrets!</h1>

    <%for(const user of usersWithSecrets){%>
      <%for(const secret of user.secrets){%>
        <p class="secret-text"><%=secret.secret%></p>
      <%}%>
    <%}%>

    <hr>

    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
    <a class="btn btn-secondary btn-lg" href="/" role="button">Home</a>
  </div>
</div>

<%- include('partials/footer') %>
